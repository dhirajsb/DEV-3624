<?xml version="1.0" encoding="ISO-8859-1" ?>

<test-configuration>

    <!--run-stats-directory>./target/perfresults</run-stats-directory-->
    <run-stats-directory>./perfresults/leveldb</run-stats-directory>
    
    <!-- Test duration in seconds -->
    <Producer-run-duration>600</Producer-run-duration>
    <consumer-run-duration>0</consumer-run-duration>
    
    <activemq.base>/home/harishs/apache-activemq-5.6-SNAPSHOT/</activemq.base>
    <log4j.configuration>./target/test-classes/log4j.properties</log4j.configuration>
    <broker.config.uri>xbean:activemq-yahoo.xml</broker.config.uri>

    <!--broker-url>tcp://localhost:61616?jms.watchTopicAdvisories=false&amp;jms.useAsyncSend=true</broker-url-->
