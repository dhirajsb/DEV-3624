        <topic name="test-topic1">
            <num-producers>10</num-producers>
            <message-size>3072</message-size><!--
            <message-size>2048</message-size>
            <message-size>4096</message-size>-->
            <producer-tx-size>0</producer-tx-size>
            <consumer-tx-size>0</consumer-tx-size>
            <type>virtual</type>
            <subscriptions>
                <subscription name="sub1">   
                <num-consumers>5</num-consumers>
                </subscription>
                <subscription name="sub2">
                <num-consumers>5</num-consumers>
                </subscription>
            </subscriptions>
        </topic>
        <topic name="test-topic2">
            <num-producers>10</num-producers>
